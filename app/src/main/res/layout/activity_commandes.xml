<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wax.application.org.beercommander.Commandes"
    android:orientation="vertical"
    android:weightSum="1">

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00B0FF"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickAddNewItem"
            android:text="Ajoute boisson"
            android:layout_weight="0.52" />

        <ToggleButton
            android:id="@+id/button_mode_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickToggleButtonDeleteElements"
            android:textOff="Delete Mode"
            android:textOn="!!!" />

    </LinearLayout>
</LinearLayout>